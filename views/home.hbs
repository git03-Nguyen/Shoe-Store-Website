<script>
    // window is ready
    $(document).ready(function(){
        $('.add-cart').click(function(){
            let productId = parseInt($(this).attr('tag'));
            handleEventForAddToCart(productId);
        });
    });

     function handleEventForAddToCart(productId){
        // Get the current URL
        let currentURL = window.location.href;

        // Create a URL object
        let url = new URL(currentURL);
        let api = url.origin + '/shop/api/post/add-cart';

        let formData = {
            size: null,
            color: null,
            quantity: 1,
            productId: productId,
        };
        $.ajax({
            url: api,
            method: "POST",
            data: formData,
            // Display data
            success: function(response) {
                if(response.message === 'Update item successfully' || response.message === 'Update item failed'){
                    response.message = 'Item added to cart!';
                }
                
                Toastify({
                text: response.message,
                duration: 3000,
                newWindow: true,
                close: false,
                gravity: "top", // `top` or `bottom`
                position: "right", // `left`, `center` or `right`
                stopOnFocus: true, // Prevents dismissing of toast on hover
                style: {
                    width: "250px",
                    background: "linear-gradient(to right, #00b09b, #96c93d)",
                },
                onClick: function(){} // Callback after click
                }).showToast();
            },
            error: function(error) {
                console.log("Error:", error);
            }
        });
    }
</script>
{{!-- End script --}}