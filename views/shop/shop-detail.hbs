                            <a class="nav-link" data-toggle="tab" href="#tabs-{{video.tabId}}" role="tab">
                                <div class="product__thumb__pic set-bg" data-setbg="{{video.productVideoThumbImage}}">
                                    <i class="fa fa-play"></i>
                                </div>
