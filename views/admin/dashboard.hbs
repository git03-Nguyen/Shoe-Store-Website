<main class="mt-5 pt-3">
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-12">
        <h4>Dashboard</h4>
      </div>
    </div>
    <div class="row">
      <div class="col-md-3 mb-3">
        <div class="card bg-primary text-white h-100">
          <div class="card-body py-5 px-4 text-center">
            <!-- Revenue -->
            <i class="fas fa-dollar-sign" style="font-size: 3rem;"></i>
            <span class="fw-bold fs-4 ms-2">${{revenue}} Revenue</span>
          </div>
          <a href="/admin/orders" class="link-light text-decoration-none">
            <div class="card-footer d-flex">
              View Details
              <span class="ms-auto">
                <i class="bi bi-chevron-right"></i>
              </span>
            </div>
          </a>
        </div>
      </div>
      <div class="col-md-3 mb-3">
        <div class="card bg-warning text-light h-100">
          <div class="card-body py-5 px-4 text-center">
            <i class="bi bi-box-seam" style="font-size: 3rem;"></i>
            <span class="fw-bold fs-4 ms-2">{{nOfProducts}} products</span>
          </div>
          <a href="/admin/products" class="link-light text-decoration-none">
            <div class="card-footer d-flex">
              View Details
              <span class="ms-auto">
                <i class="bi bi-chevron-right"></i>
              </span>
            </div>
          </a>
        </div>
      </div>
      <div class="col-md-3 mb-3">
        <div class="card bg-success text-white h-100">
          <div class="card-body py-5 px-4 text-center">
            <i class="bi bi-cart4" style="font-size: 3rem;"></i>
            <span class="fw-bold fs-4 ms-2">{{nOfOrders}} orders</span>
          </div>
          <a href="/admin/orders" class="link-light text-decoration-none">
            <div class="card-footer d-flex">
              View Details
              <span class="ms-auto">
                <i class="bi bi-chevron-right"></i>
              </span>
            </div>
          </a>
        </div>
      </div>
      <div class="col-md-3 mb-3">
        <div class="card bg-danger text-white h-100">
          <div class="card-body py-5 px-4 text-center">
            <i class="bi bi-people" style="font-size: 3rem;"></i>
            <span class="fw-bold fs-4 ms-2">{{nOfUsers}} users</span>
          </div>
          <a href="/admin/users" class="link-light text-decoration-none">
            <div class="card-footer d-flex">
              View Details
              <span class="ms-auto">
                <i class="bi bi-chevron-right"></i>
              </span>
            </div>
          </a>
        </div>
      </div>
    </div>


    <div class="row">
      <div class="col-md-6 mb-3">
        <div class="card h-100">
          <div class="card-header d-flex justify-content-between align-items-center">
            <div>
              <span class="me-2"><i class="bi bi-bar-chart-fill"></i></span>
              Sale Trends
            </div>
            <div class="form-group mb-0">
              <select class="form-control" id="modeSelect1">
                <option value="daily">Daily</option>
                <option value="monthly">Monthly</option>
              </select>
            </div>
          </div>
          <div class="card-body">
            <canvas class="chart-1" width="400" height="200"></canvas>
          </div>
        </div>
      </div>

      <div class="col-md-6 mb-3">
        <div class="card h-100">
          <div class="card-header d-flex justify-content-between align-items-center">
            <div>
              <span class="me-2"><i class="bi bi-bar-chart-fill"></i></span>
              Category Distribution
            </div>
            <div class="form-group mb-0 d-flex justify-content-center align-items-center gap-1">
              <input type="date" class="form-control" id="fromDate" /> -
              <input type="date" class="form-control" id="toDate" />
            </div>
          </div>
          <div class="card-body">
            <canvas class="chart-2" width="400" height="200"></canvas>
          </div>
        </div>
      </div>
    </div>


  </div>
</main>

{{#section 'script'}}
<script>

  let salesChart = null;

  async function loadSaleTrendChart(mode) {
    if (salesChart) {
      salesChart.destroy();
    }

    const ctxSale = document.querySelector(".chart-1").getContext("2d");

    try {
      let url = "/admin/sales/products?mode=" + mode;
      const response = await fetch(url);
      const data = await response.json();
      console.log(data);

      const saleTrendData = {
        labels: data.dates,
        datasets: [{
          label: '# of sold products',
          data: data.data,
          backgroundColor: [
            'rgba(255, 99, 132, 0.2)',
            'rgba(54, 162, 235, 0.2)',
            'rgba(255, 206, 86, 0.2)',
            'rgba(75, 192, 192, 0.2)',
            'rgba(153, 102, 255, 0.2)',
            'rgba(255, 159, 64, 0.2)',
            'rgba(255, 0, 0, 0.2)'
          ],
          borderColor: [
            'rgba(255, 99, 132, 1)',
            'rgba(54, 162, 235, 1)',
            'rgba(255, 206, 86, 1)',
            'rgba(75, 192, 192, 1)',
            'rgba(153, 102, 255, 1)',
            'rgba(255, 159, 64, 1)',
            'rgba(255, 0, 0, 1)'
          ],
          borderWidth: 1
        }]
      };

      let text = "Dates";
      if (mode === "weekly") {
        text = "Weeks";
      } else if (mode === "monthly") {
        text = "Months";
      }

      const options = {
        type: 'bar',
        data: saleTrendData,
        options: {
          scales: {
            y: {
              beginAtZero: true,
            },
            x: {
              title: {
                display: true,
                text: text,
              }
            }
          }
        }
      };

      salesChart = new Chart(ctxSale, options);

    } catch (error) {
      console.log(error);
    }



  }

  document.addEventListener("DOMContentLoaded", function () {
    loadSaleTrendChart("daily");
  });

  const modeSelect1 = document.querySelector("#modeSelect1");
  modeSelect1.addEventListener("change", function (e) {
    const mode = e.target.value;
    loadSaleTrendChart(mode);
  });

</script>

<script>
  let categoryChart = null;

  async function loadCategoryChart() {
    const from = document.querySelector("#fromDate").value;
    const to = document.querySelector("#toDate").value;

    // if from > to, return
    if (from > to) {
      return;
    }

    if (categoryChart) {
      categoryChart.destroy();
    }

    const ctxCategory = document.querySelector(".chart-2").getContext("2d");

    try {

      const response = await fetch(`/admin/sales/categories?from=${from}&to=${to}`);
      const data = await response.json();
      console.log(data);

      const categoryData = {
        labels: data.categories,
        datasets: [{
          label: '# of sold products',
          data: data.counts,
          backgroundColor: [
            'rgba(255, 99, 132, 0.2)',
            'rgba(54, 162, 235, 0.2)',
            'rgba(255, 206, 86, 0.2)',
            'rgba(75, 192, 192, 0.2)',
            'rgba(153, 102, 255, 0.2)',
            'rgba(255, 159, 64, 0.2)',
            'rgba(255, 0, 0, 0.2)'
          ],
          borderColor: [
            'rgba(255, 99, 132, 1)',
            'rgba(54, 162, 235, 1)',
            'rgba(255, 206, 86, 1)',
            'rgba(75, 192, 192, 1)',
            'rgba(153, 102, 255, 1)',
            'rgba(255, 159, 64, 1)',
            'rgba(255, 0, 0, 1)'
          ],
          borderWidth: 1
        }]
      };

      const options = {
        type: 'bar',
        data: categoryData,
        options: {
          scales: {
            y: {
              beginAtZero: true,
            },
            x: {
              title: {
                display: true,
                text: "Categories",
              }
            }
          }
        }
      };

      categoryChart = new Chart(ctxCategory, options);

    } catch (error) {
      console.log(error);
    }
  }

  document.addEventListener("DOMContentLoaded", function () {
    const fromDate = document.querySelector("#fromDate");
    const toDate = document.querySelector("#toDate");
    //  set fromDate to 7 days ago
    const date = new Date();
    date.setDate(date.getDate() - 7);
    fromDate.value = date.toISOString().slice(0, 10);
    toDate.value = new Date().toISOString().slice(0, 10);
    fromDate.addEventListener("change", function () {
      loadCategoryChart();
    });
    toDate.addEventListener("change", function () {
      loadCategoryChart();
    });
    loadCategoryChart();
  });

</script>


{{/section}}